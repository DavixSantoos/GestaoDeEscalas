<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeEscalas.MainPage"
             Background="#1C1C1E">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" >
            <Label Text="Seja Bem vindo!" 
                   FontSize="40" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#FFFFFF"/>
            
            <Grid RowDefinitions="*,*,*,*,*,*" 
                  VerticalOptions="Center" 
                  WidthRequest="400">

                <Label Grid.Row="0" Text="E-mail" TextColor="#D3D3D3"/>
                <Entry Grid.Row="1" Placeholder="Fulado@exemplo.com" Margin="0,0,0,10" />

                <Label Grid.Row="2" Text="Senha" Margin="0,0,0,10" TextColor="#D3D3D3"/>
                <Entry Grid.Row="3" Placeholder="********" Text="*****" Margin="0,0,0,40"/>
    
                <!-- Botao para Login e cadastro -->
                <Button Grid.Row="4" Text="Login" BackgroundColor="#512BD4" TextColor="White"  Margin="0,0,0,40"/>
                <Button Grid.Row="5" Text="Crie uma conta" BackgroundColor="Transparent" TextColor="#512BD4" Margin="0,0,0,20" Clicked="OnCadastrarClicked"/>
            </Grid>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
