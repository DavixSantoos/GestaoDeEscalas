<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeEscalas.Perfil"
             Background="#1C1C1E">

 <Grid RowDefinitions="60,60,*">
        <Grid Background="#2C2C2E" Padding="15,8" Grid.Row="0" ColumnDefinitions="40,*">
			<ImageButton x:Name="BtnVoltar" Source="botaovoltar.png" WidthRequest="25" HeightRequest="25" Aspect="AspectFit" VerticalOptions="Center"  HorizontalOptions="Start" Padding="0"  BackgroundColor="Transparent" Clicked="OnVoltarTelaInicialCliked"/>
            <Label Text="Seu Perfil" TextColor="White" FontSize="18" VerticalOptions="Center" Margin="10,0,0,0"  Grid.Column="1"/>
        </Grid>
        
      
        
        <ScrollView Grid.Row="2">

            <VerticalStackLayout Spacing="10" Padding="20"  VerticalOptions="Center">

                <Border Stroke="#2C2C2E" StrokeThickness="2" Background="#2C2C2E" Padding="30" WidthRequest="500">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="5,5" Opacity="0.5" />
                    </Border.Shadow>


                    <Grid RowDefinitions="*,*,*,*,*,*,*" VerticalOptions="Center" WidthRequest="400">
                        <Image Grid.Row="0"  x:Name="fotoAlterar" Source="mulher.png" HeightRequest="100" Aspect="AspectFit" HorizontalOptions="Center"/>
                        <Label Grid.Row="1" Text="NomeUsuario" TextColor="White" FontSize="18"  WidthRequest="200" HeightRequest="100" HorizontalOptions="Center" Margin="0,10" />
                        <BoxView Grid.Row="2" HeightRequest="1" Color="#404040" HorizontalOptions="Center" WidthRequest="200" Margin="0,10"/>
                        <Label Grid.Row="3" x:Name="LabelID " Text="Id: #0000" TextColor="#B0B0B0" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label Grid.Row="4" x:Name="Email" TextColor="White" Text="Email@Outlook.com.br" FontSize="14" HorizontalOptions="Center" Margin="0,5,0,0"/>

                    </Grid>
                </Border>
            </VerticalStackLayout>



        </ScrollView>
    </Grid>


</ContentPage>

  