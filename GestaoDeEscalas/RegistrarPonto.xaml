<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeEscalas.RegistrarPonto"
            >

    <Grid>
        <Image Source="fundotelainicial.jpg" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Fill"/>

        <Grid RowDefinitions="60,60,*">
            <Grid BackgroundColor="#2C2C2E" Padding="15,8" Grid.Row="0" ColumnDefinitions="40,*">
                <ImageButton x:Name="BtnVoltar" Source="botaovoltar.png" WidthRequest="25" HeightRequest="25" Aspect="AspectFit" VerticalOptions="Center"  HorizontalOptions="Start" Padding="0"  BackgroundColor="Transparent" Clicked="onVoltarTelaInicialCliked"/>
                <Label Text="Registrar Ponto" TextColor="White" FontSize="18" VerticalOptions="Center" Margin="10,0,0,0"  Grid.Column="1"/>
            </Grid>

            <ScrollView Grid.Row="2">

                <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center">

                    <Border Stroke="#2C2C2E" StrokeThickness="2" Background="#2C2C2E" Padding="30" WidthRequest="500">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="5,5" Opacity="0.5"/>
                        </Border.Shadow>

                        <Grid RowDefinitions="*,*,*,*,*,*,*" VerticalOptions="Center" WidthRequest="400">
                            <Label Grid.Row="1" Text="Registrar Ponto" TextColor="White" FontSize="14" HorizontalTextAlignment="Center"/>


                        </Grid>
                    </Border>
                   
                </VerticalStackLayout>
                
            </ScrollView>
            
        </Grid>


        
    </Grid>
    
</ContentPage>
